<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/title1"
            style="@style/GPTitleTextViewStyle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dip"
            android:text="Dash intervals" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/final_dash_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="0dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginBottom="30dip"
            android:hint="Dash pattern"
            android:labelFor="@+id/unitText">

            <EditText
                android:id="@+id/finalDashText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/final_dashshift_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/final_dash_view"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="0dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginBottom="30dip"
            android:hint="Dash shift"
            android:labelFor="@+id/unitText">

            <EditText
                android:id="@+id/finalDashShiftText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/title2"
            style="@style/GPTitleTextViewStyle"
            android:layout_below="@+id/final_dashshift_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dip"
            android:text="Simple dash pattern tool" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title2"
            android:paddingBottom="10dip"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:paddingTop="10dip" />

        <LinearLayout
            android:id="@+id/imageView1"
            android:layout_width="5dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/switch1"
            android:layout_alignTop="@+id/switch1"
            android:layout_marginLeft="30dip"
            android:layout_toEndOf="@+id/switch1"
            android:orientation="horizontal" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/switch1"
            android:paddingBottom="10dip"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:paddingTop="10dip" />

        <LinearLayout
            android:id="@+id/imageView2"
            android:layout_width="5dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/switch2"
            android:layout_alignTop="@+id/switch2"
            android:layout_marginLeft="30dip"
            android:layout_toEndOf="@+id/switch2"
            android:orientation="horizontal" />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/switch2"
            android:paddingBottom="10dip"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:paddingTop="10dip" />

        <LinearLayout
            android:id="@+id/imageView3"
            android:layout_width="5dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/switch3"
            android:layout_alignTop="@+id/switch3"
            android:layout_marginLeft="30dip"
            android:layout_toEndOf="@+id/switch3"
            android:orientation="horizontal" />

        <Switch
            android:id="@+id/switch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/switch3"
            android:paddingBottom="10dip"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:paddingTop="10dip" />

        <LinearLayout
            android:id="@+id/imageView4"
            android:layout_width="5dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/switch4"
            android:layout_alignTop="@+id/switch4"
            android:layout_marginLeft="30dip"
            android:layout_toEndOf="@+id/switch4"
            android:orientation="horizontal" />

        <Switch
            android:id="@+id/switch5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/switch4"
            android:paddingBottom="10dip"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:paddingTop="10dip" />

        <LinearLayout
            android:id="@+id/imageView5"
            android:layout_width="5dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/switch5"
            android:layout_alignTop="@+id/switch5"
            android:layout_marginLeft="30dip"
            android:layout_toEndOf="@+id/switch5"
            android:orientation="horizontal" />

        <Switch
            android:id="@+id/switch6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/switch5"
            android:paddingBottom="10dip"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:paddingTop="10dip" />

        <LinearLayout
            android:id="@+id/imageView6"
            android:layout_width="5dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/switch6"
            android:layout_alignTop="@+id/switch6"
            android:layout_marginLeft="30dip"
            android:layout_toEndOf="@+id/switch6"
            android:orientation="horizontal" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dash_unit_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switch6"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="30dip"
            android:hint="Dash unit"
            android:labelFor="@+id/unitText">

            <EditText
                android:id="@+id/unitText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="5"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>


    </RelativeLayout>

</ScrollView>