<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_selection" />
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="@color/main_selection_border" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_background" />
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="@color/main_decorations" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_selection" />
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="@color/main_selection_border" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_background" />
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="@color/main_decorations" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_disabled" />
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="@color/main_disabled_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/main_background" />
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="@color/main_decorations" />
        </shape>
    </item>
</selector>