<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cu.phibrain.plugins.cardinal.io">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".importer.CardinalProjectImporterActivity">
            <intent-filter>
                <action android:name="eu.geopaparazzi.core.extension.importer.spatialite.PICK" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
        <activity
            android:name="cu.phibrain.plugins.cardinal.io.ui.map.MapviewActivity"
            android:theme="@style/GeopapTheme.NoActionBar" />

        <activity
            android:name="cu.phibrain.plugins.cardinal.io.ui.map.CardinalMapLayerListActivity"
            android:label="Layers View"
            android:parentActivityName="cu.phibrain.plugins.cardinal.io.ui.map.MapviewActivity"
            android:theme="@style/GeopapTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cu.phibrain.plugins.cardinal.io.ui.map.MapviewActivity" />
        </activity>
        <service android:name="cu.phibrain.plugins.cardinal.io.importer.CardinalProjectImporterMenuProvider"
            android:exported="false">
            <intent-filter>
                <action android:name="eu.geopaparazzi.core.extension.ep.importer.MENU_PROVIDER" />
                <category android:name="androidsrc.intent.category.MENU_PROVIDER" />
            </intent-filter>
        </service>
    </application>

</manifest>
