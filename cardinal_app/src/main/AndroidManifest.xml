<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cu.phibrain.cardinal.app">

    <application
        android:name=".CardinalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/GeopapTheme"
        tools:replace="android:theme,android:label,android:name">
        <activity
            android:name=".CardinalActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/GeopapTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MapviewActivity"
            android:theme="@style/GeopapTheme.NoActionBar" />
        <activity
            android:name=".ui.map.CardinalMapLayerListActivity"
            android:label="Layers View"
            android:parentActivityName=".MapviewActivity"
            android:theme="@style/GeopapTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cu.phibrain.cardinal.app.MapviewActivity" />
        </activity>

        <provider
            android:name="eu.geopaparazzi.core.providers.ProfilesContentProvider"
            android:authorities="eu.geopaparazzi.provider.profiles"
            android:enabled="true"
            android:exported="true" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.library.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>
