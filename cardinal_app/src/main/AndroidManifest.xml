<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cu.phibrain.cardinal.app">

    <application
        android:name=".CardinalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/GeopapTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:theme,android:label,android:name">
        <activity
            android:name=".ui.activities.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/GeopapTheme.NoActionBar"></activity>
        <activity android:name=".ui.activities.WorkSessionListActivity" />
        <activity
            android:name=".CardinalActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/GeopapTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <data android:pathPattern=".*\\.gpap" />
                <data android:scheme="file" />

                <data android:mimeType="*/*" />

                <data android:host="*" />
            </intent-filter>
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="www.openstreetmap.org"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="www.osm.org"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MapviewActivity"
            android:theme="@style/GeopapTheme.NoActionBar" />
        <activity
            android:name=".ui.map.CardinalMapLayerListActivity"
            android:label="Layers View"
            android:parentActivityName=".MapviewActivity"
            android:theme="@style/GeopapTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cu.phibrain.cardinal.app.MapviewActivity" />
        </activity>

        <provider
            android:name="eu.geopaparazzi.core.providers.ProfilesContentProvider"
            android:authorities="eu.geopaparazzi.provider.profiles"
            android:enabled="true"
            android:exported="true" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.library.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>
    <uses-feature android:name="android.hardware.location.gps" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- NORMAL PERMISSIONS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>
