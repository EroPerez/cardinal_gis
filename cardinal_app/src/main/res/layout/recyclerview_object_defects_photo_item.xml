<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@id/imgvObjectDefectPhoto"
        android:layout_alignBottom="@id/imgvObjectDefectPhoto"
        android:background="@drawable/delete_button_background_states"
        android:elevation="1dp" />

    <ImageView
        android:id="@+id/imgvObjectDefectPhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/border_black_1px"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


</RelativeLayout>
