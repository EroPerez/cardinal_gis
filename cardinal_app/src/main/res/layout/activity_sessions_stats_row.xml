<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mapobjectsrowlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_backgroud_outline"
    android:layout_marginBottom="3dp"
    android:padding="4dp">

    <HorizontalScrollView
        android:id="@+id/hsvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gotobutton"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/deletebutton"
        android:layout_toEndOf="@+id/gotobutton">

        <TextView
            android:id="@+id/mapobjectsrowtext"
            style="@style/GPTitleTextViewStyle"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:text="" />
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/gotobutton"
        android:layout_width="@dimen/min_touch_size"
        android:layout_height="@dimen/min_touch_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:padding="5dip"
        app:srcCompat="@drawable/ic_goto_primary_24dp" />

    <ImageButton
        android:id="@+id/deleteMObutton"
        android:layout_width="@dimen/min_touch_size"
        android:layout_height="@dimen/min_touch_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:padding="5dip"
        app:srcCompat="@drawable/ic_delete_primary_24dp" />

</RelativeLayout>
