<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/button_trash"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@id/imgvObjectPhoto"
        android:layout_alignBottom="@id/imgvObjectPhoto"
        android:background="@drawable/delete_button_background_states"
        android:elevation="1dp" />


    <ImageView
        android:id="@+id/imgvObjectPhoto"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/border_black_1px"
        android:orientation="vertical"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


</RelativeLayout>
