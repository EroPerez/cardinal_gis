<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_weight="3"
    android:background="@drawable/item_backgroud_outline"
    android:padding="4dp">

    <CheckBox
        android:id="@+id/CheckBoxDefects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_weight="2"
        android:text="@string/map_object_props_inspector_defects"
        android:textColor="@color/colorPrimaryText"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/imgBtnAddDefectImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="false"
        android:background="@drawable/ic_mapview_mot_children_24dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_add_a_photo_24dp" />


</RelativeLayout>
