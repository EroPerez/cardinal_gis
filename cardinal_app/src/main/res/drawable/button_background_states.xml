<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
<!--            <corners android:radius="15dp" />-->
            <solid android:color="@color/main_selection" />
            <stroke android:width="2dp" android:color="@color/main_selection_border" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="oval">
<!--            <corners android:radius="15dp" />-->
            <solid android:color="@color/main_disabled" />
            <stroke android:width="2dp" android:color="@color/main_disabled_border" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_mapview_mot_children_24dp"/>
</selector>
